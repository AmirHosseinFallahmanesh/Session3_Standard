
@{
    ViewData["Title"] = "Edit";
}
@model Demo.Models.Student

<h1>Edit Student</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" id="name" placeholder="Enter your name" required>
    </div>
    <div class="form-group">
        <label for="surname">Surname</label>
        <input type="text" class="form-control" name="Surname" value="@Model.Surname" id="surname" placeholder="Enter your surname" required>
    </div>
    <div class="form-group">
        <label for="age">Age</label>
        <input type="number" class="form-control" name="Age" value="@Model.Age" id="age" placeholder="Enter your age" required>
    </div>
    <input type="hidden" name="StudentId" value="@Model.StudentId" />
    <button type="submit" class="btn btn-primary">Create</button>
</form>